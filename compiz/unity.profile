; My Compiz Profile for unity-3D
; vim: set ft=dosini:

; Ubuntu Unity Plugin {{{
[unityshell]
; Key to show the Hud. Prevents hud from appearing when hitting right alt (Hangul key)
s0_show_hud = <Alt>slash
; }}}

; Grid Plugin {{{
[grid]
; <win-left> Put the current window left half of the screen
s0_put_left_key = <Super>Left
; <win-right> Put the current window right half of the screen
s0_put_right_key = <Super>Right
; <win-up> Maximize the current window
s0_put_maximize_key = <Super>Up
; <win-down> Restore size of the current window
s0_put_restore_key = <Super>Down
; }}}

